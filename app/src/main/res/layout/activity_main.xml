<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <RelativeLayout
        android:id="@+id/root_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="com.suntrans.xiaofang.activity.Main_Activity">


        <com.amap.api.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

        </com.amap.api.maps.MapView>


        <TextView
            android:id="@+id/tx_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_more_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:gravity="center|left"
            android:orientation="vertical"
            android:visibility="invisible">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/zhongdiandanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="重点单位"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/yibandanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般单位"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/dadui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消防大队"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/zhongdui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消防中队"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/xiaoxingzhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政府专职小型站"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/xiangcun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乡镇专职消防队"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/xiaofangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区消防室"
                android:textColor="@color/white" />
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/xingzhenshenpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行政审批项目"
                android:textColor="@color/white" />

            <!--<android.support.v7.widget.AppCompatCheckBox-->
            <!--android:id="@+id/type5"-->
            <!--android:text="行政许可"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
        <!--<Spinner-->
        <!--android:visibility="gone"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="@color/white"-->
        <!--android:id="@+id/spinner"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:entries="@array/type"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="30dp">-->
        <!--</Spinner>-->
        <android.support.v7.widget.CardView
            android:id="@+id/search_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="55dp"
            android:elevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_search_grey_500_36dp" />

                <TextView
                    android:id="@+id/search1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:hint="@string/search_text"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_keyboard_voice_grey_500_24dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageButton
            android:background="@drawable/textview_border"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/bottom_menu"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:onClick="changedViewType"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mylocation" />

        <RelativeLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/ll_bottom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/border" />

                <LinearLayout
                    android:id="@+id/ll_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="社会单位1"
                            android:textColor="@color/balck" />

                        <TextView
                            android:id="@+id/text_company_addr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="获取中"
                            android:textColor="@color/secondtextcolor"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_companyinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="详情"
                                android:textColor="#1296db" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_right_arrow" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>




    </RelativeLayout>
</LinearLayout>