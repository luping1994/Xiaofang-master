<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*名称"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:layout_toRightOf="@+id/tv1"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="left|center"
                    android:minWidth="@dimen/mintextwidth"
                    android:maxWidth="@dimen/maxtextwidth"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />
                <TextView
                    android:id="@+id/daduihhouzhui"
                    android:textColor="@color/balck"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center"
                    android:text="大队"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*地址"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/addr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />

                <Button
                    android:id="@+id/getposition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/chooseAddr" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">
                <TextView
                    android:gravity="center"
                    android:text="经纬度:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="20dp"
                    android:hint="经度"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:id="@+id/lng"
                    android:textColor="@color/border"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:hint="纬度"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:id="@+id/lat"
                    android:textColor="@color/border"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="*联系电话"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="phone"
                        android:id="@+id/phone"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:hint="电话1"
                        android:textColor="@color/balck"
                        android:textSize="@dimen/text_size1" />
                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="phone"
                        android:id="@+id/phone1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:hint="电话2"
                        android:textColor="@color/balck"
                        android:textSize="@dimen/text_size1" />
                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="phone"
                        android:id="@+id/phone2"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:hint="电话3"
                        android:textColor="@color/balck"
                        android:textSize="@dimen/text_size1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*辖区面积"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="平方公里"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*人员组成"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="现役干部："
                            android:textSize="@dimen/text_size" />
                        <EditText
                            android:inputType="number"
                            android:id="@+id/xianyiganbu"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/text_size1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="人"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="公安干部："
                            android:textSize="@dimen/text_size" />
                        <EditText
                            android:inputType="number"
                            android:id="@+id/gonganganbu"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/text_size1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="人"
                            android:textSize="@dimen/text_size"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="消防文员："
                            android:textSize="@dimen/text_size" />
                        <EditText
                            android:inputType="number"
                            android:id="@+id/wenyuan"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/text_size1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="人"
                            android:textSize="@dimen/text_size"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="专职消防员："
                            android:textSize="@dimen/text_size" />
                        <EditText
                            android:inputType="number"
                            android:id="@+id/zhuanzhi"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:textColor="@color/balck"
                            android:textSize="@dimen/text_size1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="人"
                            android:textSize="@dimen/text_size"
                            />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="消防车总数"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/carnum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="辆"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="车辆配置情况"
                        android:textColor="@color/balck"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:text="＋" />

                    <Button
                        android:layout_toLeftOf="@+id/add"
                        android:id="@+id/sub"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:text="－" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="车载水总量"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/waterweight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="吨"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="车载泡沫总量"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/soapweight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="吨"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*所属区"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />
                <Spinner
                    android:id="@+id/district"
                    android:entries="@array/area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/infoitem_pading"
                android:paddingRight="@dimen/infoitem_pading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="所属大队"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size" />
                <EditText
                    android:inputType="text"
                    android:id="@+id/group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="请输入"
                    android:textColor="@color/balck"
                    android:textSize="@dimen/text_size1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:visibility="gone"
        android:id="@+id/commit_group"
        android:background="@drawable/commit_selector"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="确认添加"
        />
</LinearLayout>